// If you want to run as a non-root user in the container, see ../docker-compose.yml.
{
  "name": "Anagolay node",
  // "image": "mcr.microsoft.com/vscode/devcontainers/rust:bullseye",  
  "dockerComposeFile": "./docker-compose.yml",
  "workspaceFolder": "/app",
  "service": "code",
  "settings": {
    "rust-analyzer.checkOnSave.command": "clippy",
    // "terminal.integrated.defaultProfile.linux": "zsh",
    "lldb.executable": "/usr/bin/lldb",
    // VS Code don't watch files under ./target
    "files.watcherExclude": {
      "**/target/**": true
    }
  },
  // Uncomment next line if you want to copy your .ssh creds and other config files for easier use inside container
  // "postCreateCommand": "bash scripts/01-install-system-dependencies && bash scripts/02-setup-toolchain.sh; bash scripts/03-install-cargo-packages.sh",
  // noVNC, VNC, debug ports
  "forwardPorts": [
    6080,
    5901,
    9222,
    30333,
    9933,
    9944
  ],
  "features": {
    "docker-in-docker": {
      "version": "latest",
      "moby": true
    },
    "git-lfs": "latest",
    "rust": {
      "version": "latest",
      "profile": "default"
    }
  },
  "remoteUser": "vscode",
  // Add the IDs of extensions you want installed when the container is created in the array below.
  "extensions": [
    "rust-lang.rust",
    "tamasfe.even-better-toml",
    "belfz.search-crates-io",
    "panicbit.cargo",
    "serayuzgur.crates",
    "vadimcn.vscode-lldb",
    "mutantdino.resourcemonitor",
    "formulahendry.code-runner",
    "ms-azuretools.vscode-docker",
    "actboy168.tasks"
  ]
}
