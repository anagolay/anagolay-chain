{
  "editor.formatOnSave": true,
  "files.associations": {
    "*.yml": "yaml",
  },
  "cSpell.words": [
    "SPDX",
    "clippy",
    "dedup",
    "devcontainer",
    "lldb",
    "sigs",
    "twox"
  ],
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "search.exclude": {
    "**/target": true
  },
  "docker.languageserver.formatter.ignoreMultilineInstructions": true,
  "evenBetterToml.formatter.alignEntries": true,
}