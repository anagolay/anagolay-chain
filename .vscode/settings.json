{
  "cSpell.words": [
    "SPDX",
    "clippy",
    "dedup",
    "devcontainer",
    "lldb",
    "sigs",
    "twox"
  ],
  "rust-client.updateOnStartup": true,
  "rust.all_features": true,
  // "rust-client.channel": "nightly",
  "rust.build_on_save": false,
  "rust.cfg_test": true,
  "rust.clippy_preference": "on",
  // "rust.no_default_features": true
  "rust-client.trace.server": "messages",
  "rust.all_targets": false,
  "[rust]": {
    // "editor.defaultFormatter": "matklad.rust-analyzer"
    "editor.defaultFormatter": "rust-lang.rust"
  },
  "search.exclude": {
    "**/target": true
  },
  "lldb.verboseLogging": true,
  "files.insertFinalNewline": true,
  "rust-analyzer.updates.channel": "nightly", // For fun. Enables the nightly updates channel for rust-analyzer since they ask nicely in their documentation. You don't need this one. You will be prompted to download the nightly install after save.

  "rust-analyzer.debug.openDebugPane": true,
  "rust-analyzer.updates.askBeforeDownload": true,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.assist.importEnforceGranularity": true // For fun. Activates all features of rust-analyzer.
}
