{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "check",
      "command": "cargo",
      // "args": ["check", "--verbose"],
      "args": ["make", "check"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "test",
      "command": "cargo",
      "args": ["make", "test"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "type": "shell",
      "label": "build",
      "command": "cargo",
      "args": ["make", "build"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    },
    {
      "label": "purge chain",
      "type": "shell",
      "command": "cargo",
      "args": ["make", "chain-dev-purge"],
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "start dev",
      "type": "shell",
      "command": "cargo",
      "args": ["make", "chain-dev-start"],
      "problemMatcher": ["$rustc"]
    },
    {
      "type": "shell",
      "label": "fmt check",
      "command": "cargo",
      "args": ["make", "fmt-check"],
      "problemMatcher": ["$rustc"],
      "group": "build"
    }
  ]
}
